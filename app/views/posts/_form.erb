<% unless @post.nil? %>
  <%= form_for @post, remote: true do |f| %>
      <div class="form-group">

        <%= f.text_field :title, class:'form-control', placeholder:"Write title here *" %>
      </div>

      <div class="form-group">
        <%= f.text_area :desc, class:'form-control', placeholder:"Write something here *"  %>
      </div>
      <div class="col-lg-6 col-lg-offset-4">
        <%= f.submit "Submit",class:'btn btn-default' %>
        <a class='btn btn-default' <%= link_to 'Back', :back %>>
      </div>
  <% end %>
  <br>
<% end %>